@using G_Accounting_System.Models
@{
    ViewBag.Title = "Invoice";
    Layout = "~/Views/_Shared/_LayoutOne.cshtml";
}



<section class="content-header">
    @Html.AntiForgeryToken()
    <div class="box-body">

        <div class="alert alert-success alert-dismissible" id="_Success_Message_Display_" style="display:none;">
            <h4><i class="icon fa fa-check"></i> Message !</h4> <span></span>
        </div>

        <div class="alert alert-success alert-dismissible" id="_Success_Message_Display_" style="display:none;">
            <button type="button" class="close" aria-hidden="true">&times;</button>
            <h4><i class="icon fa fa-check"></i> Message !</h4>
        </div>

    </div>
</section>

<input type="hidden" id="purchaseid" />
<input type="hidden" id="billid" />
<!-- Main content -->
<section class="invoice">


    <div class="nav-tabs-custom">
        <ul class="nav nav-tabs">
            <li class="active no-print"><a href="#invoice" data-toggle="tab">Invoice</a></li>
            <li class="no-print"><a href="#activity" data-toggle="tab">Activity</a></li>
        </ul>
        <div class="tab-content">

            <div class="active tab-pane" id="invoice">
                <!-- title row -->
                <div class="row">
                    <div class="col-xs-12">
                        <h1 class="page-header">
                            <sapn style="font-size:xx-large; font-weight:bold">Invoice</sapn>
                            <small class="pull-right" id="Idate"></small>
                        </h1>
                    </div>
                    <!-- /.col -->
                </div>
                <!-- info row -->
                <div class="row invoice-info">
                    <div class="col-sm-4 invoice-col">
                        <div id="Inamefrom">From</div>
                        <address>
                            <strong>Admin, Inc.</strong><br>
                            795 Folsom Ave, Suite 600<br>
                            San Francisco, CA 94107<br>
                            Phone: (804) 123-5432<br>
                            Email: info@almasaeedstudio.com
                        </address>
                    </div>
                    <!-- /.col -->
                    <div class="col-sm-4 invoice-col">
                        <div>To</div>
                        <strong id="Inameto"></strong>
                        <address id="Iaddressto">

                        </address>

                    </div>
                    <!-- /.col -->
                    <div class="col-sm-4 invoice-col">
                        <div>
                            <b>Invoice #</b>
                            <span id="Iinvoiceno"></span>
                        </div><br>
                        <div id="IinvoiceStatus"></div>
                        <div>
                            <b>Recieve Date:</b>
                            <span id="IRecDate">

                            </span>
                        </div>
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
                <!-- Table row -->
                <div class="row">
                    <div class="col-xs-12 table-responsive">
                        <table class="table table-striped" id="Itblitemslist">
                            <thead>
                                <tr>
                                    <th>Qty</th>
                                    <th>Item Name</th>
                                    <th>Price</th>
                                    <th>Amount</th>
                                </tr>
                            </thead>
                            <tbody id="Iitemslistbody"></tbody>
                        </table>
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->

                <div class="row">
                    <!-- accepted payments column -->
                    <div class="col-xs-6">

                    </div>
                    <!-- /.col -->
                    <div class="col-xs-6">

                        <div class="table-responsive">
                            <table class="table">
                                <tr>
                                    <th style="width:43%">Subtotal:</th>
                                    <td id="Isubtotal"></td>
                                </tr>
                                <tr>
                                    <th>Total:</th>
                                    <td id="Itotal"></td>
                                </tr>
                            </table>

                        </div>
                    </div>
                    <!-- /.col -->

                </div>
                <!-- /.row -->
                <!-- this row will not appear when printing -->
                <div class="row no-print">
                    <div class="col-xs-12">
                        <button class="btn btn-default" onclick="window.print();"><i class="fa fa-print"></i> Print</button>
                        <button type="button" class="btn btn-success pull-right" id="_Purchase_Order_ConvertoBill_Save_"></button>
                        <button type="button" class="btn btn-success pull-right _Purchase_Order_Save_"></button>
                    </div>
                </div>
            </div>



            <!-- /.tab-pane -->
            <div class="tab-pane" id="activity">
                <!-- The timeline -->
                <div class="row">
                    <div class="col-md-3">
                        <!-- Profile Image -->
                        <div class="box box-primary">
                            <div class="box-body box-profile padding_bottom_none">
                                <h3 class="profile-username text-center" id="so_saleordernumber"></h3>
                                <ul class="list-group list-group-unbordered">
                                    <li class="list-group-item">
                                        <b>Vendor Name</b> <a class="pull-right" id="po__VendorName"></a>
                                    </li>
                                    <li class="list-group-item">
                                        <b>Total Amount</b> <a class="pull-right" id="po__TotalAmount"></a>
                                    </li>
                                    <li class="list-group-item">
                                        <b>Total Items</b> <a class="pull-right" id="po__TotalItems"></a>
                                    </li>
                                </ul>
                            </div>
                            <!-- /.box-body -->
                        </div>
                        <!-- /.box -->

                    </div>

                    <div class="col-lg-9">
                        <!-- Profile Image -->
                        <div class="box box-primary">
                            <div class="box-body box-profile padding_bottom_none">
                                <!-- The timeline -->
                                <ul class="timeline timeline-inverse ACTIVITY"></ul>
                            </div>

                        </div>
                        <!-- /.box-body -->
                    </div>
                </div>
            </div>
        </div>
        <!-- /.tab-content -->
    </div>
    <!-- /.nav-tabs-custom -->
</section>





