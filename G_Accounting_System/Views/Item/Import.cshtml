
@{
    ViewBag.Title = "Import";
    Layout = "~/Views/_Shared/_LayoutOne.cshtml";
}

<div class="fill list-header topgrad">
    <div class="action-row">
        <div class="dropdown clearfix list-title ember-view">
            <a data-toggle="dropdown" class="dropdown-toggle">
                <!---->  Import items  </b>
            </a>
        </div>
    </div>
</div>

<section class="content">


    <div class="alert alert-success alert-dismissible" id="_Success_Message_Display_" style="display:none;">
        <h4><i class="icon fa fa-check"></i> Message !</h4> <span></span>
    </div>



    <div class="alert alert-danger alert-dismissible" id="_Error_Message_Display_" style="display:none;">
        <button type="button" class="close" id="_Error_Message_Display_Btn_">×</button>
        <h4><i class="icon fa fa-ban"></i> Alert!</h4> <span></span>
    </div>
    <div class="box box-default _Select_File_To_Import_">
        <!-- Import Items Form Box -->
        <div class="box-header with-border">
                <h3 class="box-title">Select File</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    <button type="button" class="btn btn-box-tool" id="_Add_New_Premises_Form_Remover_"><i class="fa fa-remove"></i></button>
                </div>
            <!-- /.box-header -->
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label>Upload File : <span style="color:red">*</span></label>
                        <input type="file" class="form-control" maxlength="255" tabindex="1" id="ImportItemsFile" />
                        <span style="color:#777!important">File Format: CSV</span>
                    </div>
                    <!-- /.form-group -->
                </div>
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            @*<a href="@Url.Action("Index", "Item")" id="_Import_Form_Back__" tabindex="8" class="btn btn-default">Back</a>*@
            <button id="_Get_Uploaded_file_" tabindex="7" class="btn btn-info pull-right">Upload File</button>
        </div>
    </div>
    <div class="box">
        <div class="box-body">
            <table id="tbl_Items_Import" class="table table-striped table-bordered" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Item_type</th>
                        <th class="hidden">File_Name</th>
                        <th>Item_Name</th>
                        <th>Item_Sku</th>
                        <th class="hidden">Item_Category</th>
                        <th class="hidden">Item_Unit</th>
                        <th class="hidden">Item_Manufacturer</th>
                        <th>Item_Upc</th>
                        <th class="hidden">Item_Brand</th>
                        <th>Item_Mpn</th>
                        <th>Item_Ean</th>
                        <th>Item_Isbn</th>
                        <th>Item_Sell_Price</th>
                        <th>Item_Tax</th>
                        <th>Item_Purchase_Price</th>
                        <th class="hidden">Item_Preferred_Vendor</th>
                    </tr>
                </thead>
                <tbody id="_tbl_Items_Import_body_"></tbody>
            </table>
        </div>
        <!-- /.box-body -->
    </div>
</section>
