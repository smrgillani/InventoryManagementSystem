@using G_Accounting_System.Models
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/_Shared/_LayoutOne.cshtml";
}

@Html.AntiForgeryToken()

<!-- Main content -->
<section class="content">
    <div class="alert alert-success alert-dismissible" id="_Success_Message_Display_" style="display:none;">
        <h4><i class="icon fa fa-check"></i> Message !</h4> <p></p>
    </div>

    <div class="alert alert-danger alert-dismissible" id="_Error_Message_Display_" style="display:none;">
        <button type="button" class="close" id="_Error_Message_Display_Btn_">×</button>
        <h4><i class="icon fa fa-ban"></i> Alert!</h4> <p></p>
    </div>
    <div class="row">
        <div class="col-md-3">

            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title"></h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    </div>
                </div>
               
                <div class="box-body box-profile">


                    <div class="clearfix"></div>

                    <img class="profile-user-img img-responsive img-circle" id="PItemImage">

                    <h3 class="profile-username text-center" id="pHname"></h3>
                    <input type="hidden" name="items_id" />
                    <p class="text-muted text-center" id="pHsku"></p>
                    <ul class="list-group list-group-unbordered">
                        <li class="list-group-item">
                            <b>Status</b> <a class="pull-right" id="cp__item_status"></a>
                        </li>
                        <li class="list-group-item border_bottom_0px_ padding_bottom_none">
                            <button type="button" class="btn btn-block btn-danger" onclick='DelItem(this)' id="PDeleteItem">Delete</button>
                        </li>
                    </ul>
                    <div class="_Profile_Left_">
                        <h3 class="profile-username">Accounting Stock</h3>
                        <ul class="list-group list-group-unbordered">
                            <li class="list-group-item">
                                <b>Stock on Hand</b> <a class="pull-right PAccStockOnHand"></a>
                            </li>
                            <li class="list-group-item">
                                <b>Committed Stock</b> <a class="pull-right pAccCommittedStock"></a>
                            </li>
                            <li class="list-group-item">
                                <b>Available for Sale</b> <a class="pull-right PAccAvail"></a>
                            </li>
                        </ul>
                        <h3 class="profile-username">Physical Stock</h3>
                        <ul class="list-group list-group-unbordered">
                            <li class="list-group-item">
                                <b>Stock on Hand</b> <a class="pull-right PPhyStockOnHand"></a>
                            </li>
                            <li class="list-group-item">
                                <b>Committed Stock</b> <a class="pull-right PPhyCommittedStock"></a>
                            </li>
                            <li class="list-group-item">
                                <b>Available Sale</b> <a class="pull-right PPhyAvail"></a>
                            </li>
                        </ul>
                        @*<h3 class="profile-username">Reorder Level</h3>*@
                        <ul class="list-group list-group-unbordered">
                            <li class="list-group-item">
                                <b>Reorder Level</b> <a class="pull-right PReorderLevel"></a>
                            </li>
                        </ul>


                    </div>
                    <!-- /.box-body -->
                </div>
            </div>

