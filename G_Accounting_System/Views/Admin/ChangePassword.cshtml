
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/_Shared/_LayoutOne.cshtml";
}

<div class="fill list-header topgrad">
    <div class="action-row">

        
        <div class="dropdown clearfix list-title ember-view">
            <a data-toggle="dropdown" class="dropdown-toggle">
                <!---->  Change Password
            </a>
           
        </div>
    </div>
</div>
<section class="content">

    <div class="alert alert-success alert-dismissible" id="_Success_Message_Display_" style="display:none;">
        <h4><i class="icon fa fa-check"></i> Message !</h4> <span></span>
    </div>



    <div class="alert alert-danger alert-dismissible" id="_Error_Message_Display_" style="display:none;">
        <button type="button" class="close" id="_Error_Message_Display_Btn_">×</button>
        <h4><i class="icon fa fa-ban"></i> Alert!</h4> <span></span>
    </div>


    <!-- Add New Brand Form Box -->
    @Html.AntiForgeryToken()

    <div class="box box-default _Change_Password__Form_">
        <div class="box-header with-border">
            <h3 class="box-title">Change Password</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
            </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div class="nav-tabs-custom box_shadow_none">
                <!-- Tabs within a box -->
                <ul class="nav nav-tabs nav_tabs_for_new_Brand nav_tabs_new_custom_bg">
                    <li class="active"><a href="#v-general-dtls" data-toggle="tab">Brand Details</a></li>
                    @*<li class="pull-right header"><i class="fa fa-inbox"></i> Sales</li>*@
                </ul>
                @Html.AntiForgeryToken()
                <div class="tab-content no-padding">
                    <!-- Morris chart - Sales -->
                    <input type="hidden" name="brandid" value="0" />
                    <div class="chart tab-pane active" id="v-general-dtls" style="position: relative; height: auto;">
                        <br />
                        <div class="row">
                        </div>
                        <!-- /.row -->
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Current Password : </label>
                                    <input type="password" class="form-control" tabindex="1" autofocus name="current_password">
                                </div>
                            </div>
                        </div>
                        <!-- /.row -->
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>New Password : </label>
                                    <input type="password" class="form-control" tabindex="2" name="new_password">
                                </div>
                            </div>
                        </div>
                        <!-- /.row -->
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Confirm Password : </label>
                                    <input type="password" class="form-control" tabindex="3" name="confirm_password">
                                </div>
                            </div>
                        </div>
                        <!-- /.row -->
                    </div>



                </div>
            </div>

            <!-- /.row -->
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button id="_Add_New_Brand_Form_Remover__" class="btn btn-default">Cancel</button>
            <button id="_Add_Change_Password_Save_" tabindex="4" class="btn btn-info pull-right">Change Password</button>
        </div>
    </div>
    

</section>

