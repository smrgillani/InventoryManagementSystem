
@{
    ViewBag.Title = "BillPayment";
    Layout = "~/Views/_Shared/_LayoutOne.cshtml";
}

<section class="content-header">
    <div class="box-body">
        <div class="alert alert-success alert-dismissible" id="_Success_Message_Display_" style="display:none;">
            <h4><i class="icon fa fa-check"></i> Message !</h4> <span></span>
        </div>



        <div class="alert alert-danger alert-dismissible" id="_Error_Message_Display_" style="display:none;">
            <button type="button" class="close" id="_Error_Message_Display_Btn_">×</button>
            <h4><i class="icon fa fa-ban"></i> Alert!</h4> <span></span>
        </div>
    </div>
</section>
<section class="content">
    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">New Payment</h3>

        </div>
        <!-- /.box-header -->
        <div class="box-body">


            @Html.AntiForgeryToken()

            <input type="hidden" id="bill_id" />
            <input type="hidden" id="bill_no" />
            <input type="hidden" id="total" />

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Payment Made : <span style="color:red">*</span></label>
                        <input type="text" class="form-control" tabindex="1" name="new_payment_made">
                    </div>
                    <!-- /.form-group -->
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Payment Date : </label>
                        <input type="text" class="form-control" value="@DateTime.Now.Date.ToString("dd/MM/yyyy")" tabindex="2" name="new_payment_date">
                    </div>
                    <!-- /.form-group -->
                </div>

            </div>
            <div class="row">
                @*<div class="col-md-4">
                <div class="form-group">
                    <label>Bank Charges (If Any) : </label>
                    <input type="number" class="form-control" value="0" tabindex="3" name="new_bank_charges">
                </div>
                 /.form-group
            </div>*@
                <div class="col-md-4">
                    <div class="form-group">
                        <div class="form-group">
                            <label>Payment Mode : <span style="color:red">*</span></label>
                            <select class="form-control select2 PaymentModeDropdown" id="get_payment_mode" style="width:100%;" tabindex="3" name="get_payment_mode"></select>
                        </div>
                    </div>
                    <!-- /.form-group -->
                </div>
            </div>

            <div class="row">
                <div class="col-md-8">
                    <label style="color:white;"> - </label>
                    <div class="form-group">
                        <input type="submit" id="_New_Payment_Save_" style="display:block;" tabindex="4" class="btn btn-info pull-right" value="Save">
                    </div>
                    <!-- /.form-group -->
                </div>
            </div>

        </div>

    </div>
    <div class="box">
        <div class="box-header">
            <h3 class="box-title" id="payment_history_title"></h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" id="_Add_New_Purchase_Order_Form_Remover_"><i class="fa fa-remove"></i></button>
            </div>
        </div>
        <div class="box-body">
            <table id="Payments_list" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Bill No</th>
                        <th>Amount </th>
                        <th>Paid</th>
                        <th>balance</th>

                    </tr>
                </thead>
                <tbody id="_tbl_Payments_List_Body_"></tbody>
                <tfoot>
                    <tr>
                        <th>Bill No</th>
                        <th>Amount </th>
                        <th>Paid</th>
                        <th>balance</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</section>
