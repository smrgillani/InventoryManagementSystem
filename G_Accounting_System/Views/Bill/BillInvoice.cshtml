
@{
    ViewBag.Title = "BillInvoice";
    Layout = "~/Views/_Shared/_LayoutOne.cshtml";
}

@Html.AntiForgeryToken()
<section class="content-header">
    <div class="box-body">

        <div class="alert alert-success alert-dismissible" id="_Success_Message_Display_" style="display:none;">
            <h4><i class="icon fa fa-check"></i> Message !</h4> <span></span>
        </div>

        <div class="alert alert-success alert-dismissible" id="_Success_Message_Display_" style="display:none;">
            <button type="button" class="close" aria-hidden="true">&times;</button>
            <h4><i class="icon fa fa-check"></i> Message !</h4>
        </div>

    </div>
</section>

<input type="hidden" id="purchaseid" />
<input type="hidden" id="billid" />
<!-- Main content -->
<section class="invoice">
    <!-- title row -->
    <div class="row">
        <div class="col-xs-12">
            <h1 class="page-header">
                <sapn style="font-size:xx-large; font-weight:bold">Bill</sapn>
                <small class="pull-right" id="Idate"></small>
            </h1>
        </div>
        <!-- /.col -->
    </div>
    <!-- info row -->
    <div class="row invoice-info">
        <div class="col-sm-4 invoice-col">
            <div id="Inamefrom">From</div>
            <address>
                <strong>Admin, Inc.</strong><br>
                795 Folsom Ave, Suite 600<br>
                San Francisco, CA 94107<br>
                Phone: (804) 123-5432<br>
                Email: info@almasaeedstudio.com
            </address>
        </div>
        <!-- /.col -->
        <div class="col-sm-4 invoice-col">
            <div>To</div>
            <strong id="Inameto"></strong>
            <address id="Iaddressto">

            </address>

        </div>
        <!-- /.col -->
        <div class="col-sm-4 invoice-col">
            <div id="IBillno"></div><br>
            <div>
                <b>Status: </b>
                <span id="IBillStatus"></span>
            </div>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
    <!-- Table row -->
    <div class="row">
        <div class="col-xs-12 table-responsive">
            <table class="table table-striped" id="Itblitemslist">
                <thead>
                    <tr>
                        <th>Qty</th>
                        <th>Item Name</th>
                        <th>Price</th>
                        <th>Amount</th>
                    </tr>
                </thead>
                <tbody id="Iitemslistbody"></tbody>
            </table>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->

    <div class="row">
        <!-- accepted payments column -->
        <div class="col-xs-6">

        </div>
        <!-- /.col -->
        <div class="col-xs-6">

            <div class="table-responsive">
                <table class="table">
                    <tr>
                        <th style="width:43%">Subtotal:</th>
                        <td id="Isubtotal"></td>
                    </tr>
                    <tr>
                        <th>Total:</th>
                        <td id="Itotal"></td>
                    </tr>
                </table>

            </div>
        </div>
        <!-- /.col -->

    </div>
    <!-- /.row -->
    <!-- this row will not appear when printing -->
    <div class="row no-print">
        <div class="col-xs-12">
            <button class="btn btn-default" onclick="window.print();"><i class="fa fa-print"></i> Print</button>
            @*<a href="/Bill/BillPayment/" class="btn btn-success pull-right _Bill_Save_"></a>*@
            <button type="button" class="btn btn-success pull-right _Record_Payment_"></button>
            @*<button type="button" class="btn btn-success pull-right _View_Payments_">View Payments</button>*@
            @*<a href="/Bill/ViewPayments/" class="btn btn-success pull-right _View_Payments_">
                    View Payments

                </a>*@
        </div>
    </div>

</section>
<section class="content no-print">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title" id="payment_history_title"></h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" id="_Add_New_Purchase_Order_Form_Remover_"><i class="fa fa-remove"></i></button>
            </div>
        </div>
        <div class="box-body">
            <table id="Payments_list" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Bill No</th>
                        <th>Amount </th>
                        <th>Paid</th>
                        <th>balance</th>

                    </tr>
                </thead>
                <tbody id="_tbl_Payments_List_Body_"></tbody>
                <tfoot>
                    <tr>
                        <th>Bill No</th>
                        <th>Amount </th>
                        <th>Paid</th>
                        <th>balance</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</section>







