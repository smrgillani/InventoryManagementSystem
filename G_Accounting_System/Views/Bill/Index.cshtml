
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_Shared/_LayoutOne.cshtml";
}

<div class="fill list-header topgrad">
    <div class="action-row">

        
        <div class="dropdown clearfix list-title ember-view">
            <a data-toggle="dropdown" class="dropdown-toggle">
                <!---->  Bills
            </a>
            @*<ul class="dropdown-menu scrollmenu ">
                <li> <a>All</a> </li>
                <li class="divider"></li>
                <li> <a>Active</a> </li>
                <li> <a>Inactive</a> </li>
                
            </ul>*@
        </div>
    </div>
</div>

<section class="content">


    <div class="box-body">

        <div class="alert alert-success alert-dismissible" id="_Success_Message_Display_" style="display:none;">
            <h4><i class="icon fa fa-check"></i> Message !</h4> <span></span>
        </div>



        <div class="alert alert-danger alert-dismissible" id="_Error_Message_Display_" style="display:none;">
            <button type="button" class="close" id="_Error_Message_Display_Btn_">×</button>
            <h4><i class="icon fa fa-ban"></i> Alert!</h4> <span></span>
        </div>


    </div>

    <!-- Add New Purchase Form Box -->
    @Html.AntiForgeryToken()
    <div class="_Add_New_Bill_Form_" style="display:none;"></div>
    <!-- /.Add New Purchase Form Box -->
    <!-- Details Of Purchases -->
    <div class="box">
        <div class="row">
            <div class="col-md-6">
                <div class="box-body bottom_padding_5px_">
                    <!-- Date dd/mm/yyyy -->
                    <div class="form-group margin_bottom_5px">
                        <label>From Date:</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            <input type="text" name="BillStartDate" class="form-control datepicker" value="@DateTime.Now.Date.ToString("dd/MM/yyyy")" data-inputmask="'alias': 'dd/mm/yyyy'" data-mask>
                        </div>
                        <!-- /.input group -->
                    </div>
                    <!-- /.form group -->
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.col -->
            <div class="col-md-6">
                <div class="box-body bottom_padding_5px_">
                    <!-- Date dd/mm/yyyy -->
                    <div class="form-group margin_bottom_5px">
                        <label>To Date:</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            <input type="text" class="form-control datepicker" name="BillEndDate" value="@DateTime.Now.Date.ToString("dd/MM/yyyy")" data-inputmask="'alias' : 'dd/mm/yyyy'" data-mask>
                        </div>
                        <!-- /.input group -->
                    </div>
                    <!-- /.form group -->
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
        @*<div class="box-header">
                <h3 class="box-title">Data Table With Full Features</h3>
            </div>*@
        <!-- /.box-header -->
        <div class="box-body">
            <table id="bills_list" class="table table-striped table-bordered" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Bill Number</th>
                        <th>Order No </th>
                        @*<th>Vendor Name </th>*@
                        <th>Due Date</th>
                        <th>Amount</th>
                        <th>Balance Due</th>
                    </tr>
                </thead>
                <tbody id="_tbl_Bills_List_Body_"></tbody>
                <tfoot>
                    <tr>
                        <th>Bill Number</th>
                        <th>Order No </th>
                        @*<th>Vendor Name </th>*@
                        <th>Due Date</th>
                        <th>Amount</th>
                        <th>Balance Due</th>
                    </tr>
                </tfoot>
            </table>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- / Details Of Purchases -->
</section>


