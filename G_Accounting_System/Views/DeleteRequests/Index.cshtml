@using G_Accounting_System.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_Shared/_LayoutOne.cshtml";
}
<section class="content-header">
    <h1>
        Delete Requests

    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Dashboard")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active"><a href="#">Delete Requests</a></li>
    </ol>
</section>
<section class="content">
    <div class="alert alert-success alert-dismissible" id="_Success_Message_Display_" style="display:none;">
        <h4><i class="icon fa fa-check"></i> Message !</h4> <span></span>
    </div>



    <div class="alert alert-danger alert-dismissible" id="_Error_Message_Display_" style="display:none;">
        <button type="button" class="close" id="_Error_Message_Display_Btn_">×</button>
        <h4><i class="icon fa fa-ban"></i> Alert!</h4> <span></span>
    </div>
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-3">

            <div class="box box-solid">
                <div class="box-header with-border">
                    <h3 class="box-title">Types</h3>
                    <div class="box-tools">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="box-body no-padding">
                    <ul class="nav nav-pills nav-stacked">

                        @{
                            List<DeleteRequest> DeleteRequests = new List<DeleteRequest>();

                            if (Session["delreq"] != null)
                            {
                                DeleteRequests = new List<DeleteRequest>((List<DeleteRequest>)Session["delreq"]);
                                foreach (var i in DeleteRequests)
                                {
                                    if (i.Count != 0)
                                    {
                                        <li class="delete_request">
                                            <a href="#">
                                                <i class="fa fa-trash-o"></i> <span id="type">@i.Type</span>
                                                <span class="label label-primary pull-right">@i.Count</span>
                                            </a>
                                        </li>
                                    }
                                }
                            }
                        }
                    </ul>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /. box -->
            <!-- /.box -->
        </div>
        <!-- /.col -->
        <div class="col-md-9">
            <div class="box box-primary">

                <!-- /.box-header -->
                <div class="box-body">

                    <table class="table table-striped table-bordered" id="_tbl_Delete_Requests_" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Delete Requested By</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody d="_tbl_Delete_Requests_Body_"></tbody>
                        <tfoot>
                            <tr>
                                <th>Name</th>
                                <th>Delete Requested By</th>
                                <th>Delete</th>
                            </tr>
                        </tfoot>
                    </table>

                    <!-- /.mail-box-messages -->
                </div>
                <!-- /.box-body -->

            </div>
            <!-- /. box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

