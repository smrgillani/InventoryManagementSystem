<div class="box-header with-border">
    <h3 class="box-title">Add New Factory</h3>
    <div class="box-tools pull-right">
        @*<button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>*@
        <button type="button" class="btn btn-box-tool" id="_Add_New_Premises_Form_Remover_"><i class="fa fa-remove"></i></button>
    </div>
</div>
<!-- /.box-header -->
<div class="box-body">
    <div class="nav-tabs-custom box_shadow_none">
        <!-- Tabs within a box -->
        <ul class="nav nav-tabs nav_tabs_for_new_item nav_tabs_new_custom_bg">
            <li class="active"><a href="#v-general-dtls" data-toggle="tab">General Details</a></li>
            @*<li class="pull-right header"><i class="fa fa-inbox"></i> Sales</li>*@
        </ul>
        @Html.AntiForgeryToken()
        <div class="tab-content no-padding">
            <!-- Morris chart - Sales -->
            <input type="hidden" name="premisesid" value="0" />
            <div class="chart tab-pane active" id="v-general-dtls" style="position: relative; height: auto;">
                <br />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Name : <span style="color:red">*</span></label>
                            <input type="text" class="form-control" tabindex="1" name="premises_Name">
                        </div>
                        <!-- /.form-group -->
                        <div class="form-group">
                            <label>Registered Device Mac Address : </label>
                            <input type="text" class="form-control" tabindex="3" name="premises_pcma">
                        </div>
                        <!-- /.form-group -->
                        <!-- /.form-group -->
                    </div>
                    <!-- /.col -->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Phone(Landline) : </label>
                            <input type="number" class="form-control" tabindex="2" name="premises_phone">
                        </div>
                        <!-- /.form-group -->
                        <div class="form-group">
                            <label>Address : </label>
                            <input type="text" class="form-control" tabindex="4" name="premises_address">
                        </div>

                        <!-- /.form-group -->
                        <!-- /.form-group -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Country : <span style="color:red">*</span></label>
                            <select class="form-control select2 CountryDrodown" id="getpremises_country" style="width:100%;" tabindex="5" name="premises_country"></select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <!-- /.form-group -->
                        <div class="form-group">
                            <label>City : <span style="color:red">*</span></label>
                            <select class="form-control select2 CityDropdown" id="getpremises_city" style="width:100%;" tabindex="6" name="premises_city"></select>
                        </div>
                        <!-- /.form-group -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->

            </div>
        </div>
    </div>

    <!-- /.row -->
</div>
<!-- /.box-body -->
<div class="box-footer">
    <button id="_Add_New_Premises_Form_Remover__" tabindex="8" class="btn btn-default">Cancel</button>
    <button id="_Add_New_Premises_Form_Save_" tabindex="7" class="btn btn-info pull-right">Save</button>
</div>

<script src="@Url.Content("~/Resources/js/Admin/PremisesI.js")"></script>