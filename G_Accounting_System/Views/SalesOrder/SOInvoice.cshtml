                                        <th>Subtotal:</th>
                                        <td id="Isubtotal"></td>
                                    </tr>
                                    <tr>
                                        <th>Total Package Cost:</th>
                                        <td id="Itotalpackagescost"></td>
                                    <tr>
                                        <th>Total Shipment Cost:</th>
                                        <td id="Itotalshipmentcost"></td>
                                    </tr>
