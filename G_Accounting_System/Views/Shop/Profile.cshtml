@using G_Accounting_System.Models
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/_Shared/_LayoutOne.cshtml";
}

@Html.AntiForgeryToken()

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-3">
            <!-- Profile Image -->
            <div class="box box-primary">
                <div class="box-body box-profile padding_bottom_none">

                    <img class="profile-user-img img-responsive img-circle" src="~/Resources/img/Supplier-128x128.png" alt="User profile picture">
                    <h3 class="profile-username text-center" id="ep__premises_name"></h3>
                    <p class="text-muted text-center" id="ep__premises_designation"></p>
                    <ul class="list-group list-group-unbordered">
                        <li class="list-group-item">
                            <b>Status</b> <a class="pull-right" id="cp__premises_status"></a>
                        </li>
                        <li class="list-group-item border_bottom_0px_ padding_bottom_none">
                            <button type="button" class="btn btn-block btn-danger PDeletePremises" onclick='DelPremises(this)'>Delete</button>
                        </li>
                    </ul>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
            <!-- Location Detail Box -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Location Information</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <strong><i class="fa fa-map-marker margin-r-5"></i>Address</strong>
                    <p class="text-muted" id="ep__premises_address"></p>
                    <hr>
                    <strong><i class="fa fa-phone margin-r-5"></i> Phone</strong>
                    <p class="text-muted" id="ep__premises_address_phone"></p>
                    <hr>
                    <strong><i class="fa fa-building-o margin-r-5"></i>City</strong>
                    <p class="text-muted" id="ep__premises_address_city"></p>
                    <hr>
                    <strong><i class="fa fa-flag margin-r-5"></i>Country</strong>
                    <p class="text-muted" id="ep__premises_address_country"></p>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->

        </div>
        <!-- /.col -->
        <div class="col-md-9">

            <div class="alert alert-success alert-dismissible" id="_Success_Message_Display_" style="display:none; margin:5px;">
                <h4><i class="icon fa fa-check"></i> Message !</h4> <span></span>
            </div>

            <div class="alert alert-danger alert-dismissible" id="_Error_Message_Display_" style="display: none; margin: 5px;">
                <button type="button" class="close" id="_Error_Message_Display_Btn_">×</button>
                <h4><i class="icon fa fa-ban"></i> Alert!</h4> <span></span>
            </div>

            <div class="nav-tabs-custom">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#activity" data-toggle="tab">Activity</a></li>
                    @*<li><a href="#settings" data-toggle="tab">Update Information</a></li>*@
                </ul>
                <div class="tab-content">
                    <div class="active tab-pane" id="activity">
                        <!-- The timeline -->
                        <ul class="timeline timeline-inverse ACTIVITY">
                            <!-- timeline time label -->
                                                    </ul>
                    </div>
                    <!-- /.tab-pane -->
                    <div class="tab-pane" id="settings">
                        <form class="form-horizontal">
                            <input type="hidden" name="premises_id">
                            <div class="form-group">
                                <label for="inputName" class="col-sm-3 control-label">Name : </label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" name="_premises_name">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail" class="col-sm-3 control-label">Registered Device Mac Address : </label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" name="_premises_pcma">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputName" class="col-sm-3 control-label">Phone : </label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" name="_premises_phone">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputExperience" class="col-sm-3 control-label">Address : </label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" tabindex="5" name="_premises_address">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputSkills" class="col-sm-3 control-label">Country : </label>
                                <div class="col-sm-9">
                                    <select class="form-control select2" id="getpremises_country" style="width:100%;" tabindex="2" name="premises_country"></select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputSkills" class="col-sm-3 control-label">City : </label>
                                <div class="col-sm-9">
                                    <select class="form-control select2" id="getpremises_city" style="width:100%;" tabindex="2" name="premises_city"></select>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-3 col-sm-9">
                                    <button type="button" class="btn btn-success" id="Update_Existing_premises">Update Information</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <!-- /.tab-pane -->
                </div>
                <!-- /.tab-content -->
            </div>
            <!-- /.nav-tabs-custom -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
